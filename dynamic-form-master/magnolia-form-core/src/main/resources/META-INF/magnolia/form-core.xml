<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
  <name>form-core</name>
  <displayName>${project.name}</displayName>
  <description>${project.description}</description>
  <class>info.magnolia.form.FormCoreModule</class>
  <versionHandler>info.magnolia.form.setup.FormCoreModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

  <!-- For more information on module descriptor configuration options -->
  <!-- https://documentation.magnolia-cms.com/display/DOCS/XML-based+module+descriptor -->

  <components>
    <id>main</id>
    <component>
      <type>info.magnolia.form.service.FormService</type>
      <implementation>info.magnolia.form.service.impl.FormServiceImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.form.service.FormLocalizedService</type>
      <implementation>info.magnolia.form.service.impl.FormLocalizedServiceImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.form.service.SectionService</type>
      <implementation>info.magnolia.form.service.impl.SectionServiceImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.form.service.SectionLocalizedService</type>
      <implementation>info.magnolia.form.service.impl.SectionLocalizedServiceImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.form.service.QuestionService</type>
      <implementation>info.magnolia.form.service.impl.QuestionServiceImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.form.service.QuestionLocalizedService</type>
      <implementation>info.magnolia.form.service.impl.QuestionLocalizedServiceImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.form.service.AnswerOptionService</type>
      <implementation>info.magnolia.form.service.impl.AnswerOptionServiceImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.form.service.AnswerOptionLocalizedService</type>
      <implementation>info.magnolia.form.service.impl.AnswerOptionLocalizedServiceImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.form.service.ResponseService</type>
      <implementation>info.magnolia.form.service.impl.ResponseServiceImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.form.service.ResponseItemService</type>
      <implementation>info.magnolia.form.service.impl.ResponseItemServiceImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.form.functions.FormFunctions</type>
      <implementation>info.magnolia.form.functions.FormFunctions</implementation>
    </component>
    <component>
      <type>info.magnolia.form.i18n.LocaleResolver</type>
      <implementation>info.magnolia.form.i18n.DefaultLocaleResolver</implementation>
    </component>
  </components>

  <dependencies>
    <dependency>
      <name>core</name>
      <version>*</version>
    </dependency>
    <dependency>
      <name>rendering</name>
      <version>*</version>
    </dependency>
    <!--  Add other dependencies here, e.g the mte (magnolia templating essentials).
    <dependency>
      <name>mte</name>
      <version>0.7/*</version>
    </dependency>
    -->
  </dependencies>
</module>
